<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        {{#user}}
        <div class="user-info d-flex align-items-center">
            <a href="{{profileurl}}" class="perfil-link d-flex align-items-center text-muted text-decoration-none">
                <img src="{{imageurl}}" class="rounded-circle mr-2" alt="{{#str}}avatar_alt, local_dta{{/str}}"
                    style="width: 50px; height: 50px;">
                <div class="text-dark">
                    <strong>{{firstname}} {{lastname}}</strong><br>
                    <small>{{email}}</small>
                </div>
            </a>
        </div>
        {{/user}}
        {{#ourcase}}
        <div class="d-flex">
            <a href="{{editurl}}{{case.id}}" class="mr-3 shadow-none" title="{{#str}}edit, local_dta{{/str}}">
                <i class="fa fa-pencil fa-lg text-primary"></i>
            </a>
            <a href="{{deleteurl}}{{case.id}}" class="mr-3 shadow-none" title="{{#str}}delete, local_dta{{/str}}">
                <i class="fa fa-trash fa-lg text-danger"></i>
            </a>
        </div>
        {{/ourcase}}
    </div>
    {{#ourcase}}
    <div class="card-body">
        <h4 class="card-title text-primary">{{title}}</h4>
        <div class="row">
            <div class="col-md-12" id="sections-header">
                {{#sectionheader}} {{> local_dta/cases/view/header-view }} {{/sectionheader}}
            </div>
            <div class="col-md-12" id="sections-body">
                {{#sections}} {{> local_dta/cases/view/text-view}} {{/sections}}
            </div>
        </div>
    </div>
    {{/ourcase}}
</div>