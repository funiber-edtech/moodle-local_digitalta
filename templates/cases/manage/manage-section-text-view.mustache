<div class="case-manage-section-view row mt-3" id="section_{{id}}">
    <input type="hidden" id="sectionid_{{id}}" value="{{id}}">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between py-2">
                <div id="title_{{id}}">
                    {{title}}
                </div>
                <div class="d-flex align-items-end">
                    <button type="button" data-id="{{id}}" class="btn btn-outline-danger btn-sm mr-2 case-section-delete-button">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                    <button type="button" data-id="{{id}}" class="btn btn-outline-secondary btn-sm case-section-edit-button">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" id="content_{{id}}">
                {{{content}}}
            </div>
        </div>
    </div>
</div>