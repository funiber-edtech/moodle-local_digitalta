<div class="container-fluid">
  <input type="hidden" id="ourcases-id" value="{{case.id}}">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
          <h4>{{#str}}experience, local_dta{{/str}}</h4>
          <hr />
          <h5>{{experience.title}}</h5>
          <p>{{{experience.description}}}</p>
        </div>
        <div class="col-md-9">
          <div class="row">
            <div class="col-md-12" id="sections-header">
              {{#sectionheader}} {{> local_dta/cases/manage/section-header-edit }} {{/sectionheader}}
            </div>
            <div class="col-md-12" id="sections-body">
              {{#sections}} {{> local_dta/cases/manage/section-text-view}} {{/sections}}
            </div>
            <div class="col-md-12">{{>local_dta/cases/manage/section-add }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-right pt-4">
    <button type="button" id="save-case-button" class="btn btn-primary">{{#str}}ourcases_button_save, local_dta{{/str}}</button>
  </div>
</div>