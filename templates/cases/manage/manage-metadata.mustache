<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="mb-3">
                    <label for="case-manage-title" class="text-secondary digitalta-required">
                        {{#str}} cases:manage:title, local_digitalta {{/str}}
                    </label>
                    <input type="text" value="{{case.title}}" class="form-control" id="case-manage-title" name="case-manage-title" required />
                </div>
                <div class="mb-3">
                    <label for="case-manage-lang" class="text-secondary digitalta-required">{{#str}} cases:manage:language, local_digitalta {{/str}}</label>
                    <select class="form-control" id="case-manage-lang" name="case-manage-lang" required>
                        {{#languages}}
                            {{#selected}}
                                <option value="{{key}}" class="text-capitalize" selected>{{{value}}}</option>
                            {{/selected}}
                            {{^selected}}
                                <option value="{{key}}" class="text-capitalize">{{{value}}}</option>
                            {{/selected}}
                        {{/languages}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="case-manage-themes" class="text-secondary digitalta-required">
                        {{#str}} cases:manage:themes, local_digitalta {{/str}}
                    </label>
                    <select multiple class="form-control d-none" id="case-manage-themes" name="case-manage-themes" required>
                        {{#case.themes}}
                            <option selected value="{{id}}" data-active-selection="true" class="text-capitalize selected">{{name}}</option>
                        {{/case.themes}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="case-manage-tags" class="text-secondary">
                        {{#str}} cases:manage:tags, local_digitalta {{/str}}
                    </label>
                    <select multiple class="form-control d-none" id="case-manage-tags" name="case-manage-tags">
                        {{#case.tags}}
                            <option selected value="{{id}}" data-active-selection="true" class="text-capitalize selected">{{name}}</option>
                        {{/case.tags}}
                    </select>
                </div>
                <div class="mb-3">
                    <div class="label-extra d-flex flex-row">
                        <label for="case-manage-description" class="text-secondary digitalta-required">
                            {{#str}} cases:manage:description, local_digitalta {{/str}}
                        </label>
                    </div>
                    <textarea class="form-control" id="case-manage-description" name="case-manage-description" maxlength="300" rows="3" required>{{case.description}}</textarea>
                </div>
            </div>
        </div>
    </div>
</div>
