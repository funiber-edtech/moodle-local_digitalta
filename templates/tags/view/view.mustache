<div class="container-fluid col-12 col-sm-10 digitalta-themestags-view">
    <!--Section: Title-->
    <section data-section-name="digitalta-themestags-view-title">
        <div class="container-fluid d-flex">
            <div class="row align-items-justify">
                <div class="col-12">
                    <div class="digitalta-subtitle">{{title}}</div>
                    <h1 class="digitalta-title display-3">{{{tag.name}}}</h1>
                </div>
            </div>
        </div>
    </section>
    <!--Section: Introduction-->
    <section data-section-name="digitalta-themestags-view-introduction">
        <div class="container-fluid d-flex text-center">
            <div class="row align-items-center">
                <div class="col-12 pt-4 text-justify" style="line-height: 2em;">
                    {{#str}} themestags:view:description, local_digitalta, {{{tag.name}}} {{/str}}
                </div>
            </div>
        </div>
    </section>
    <!--Section: Content-->
    <section data-section-name="digitalta-themestags-view-content">
        <div class="container-fluid d-flex my-4">
            <div class="row w-100">
                <div class="col-sm-12 col-md-6">
                    <!-- Experiences -->
                    <div class="digitalta-themestags-view-experiences mb-3">
                        {{> local_digitalta/tags/view/experience-list}}
                    </div>
                    <!-- Cases -->
                    <div class="digitalta-themestags-view-cases">
                        {{> local_digitalta/tags/view/case-list}}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <!-- Resources -->
                    <div class="digitalta-themetag-view-resources">
                        {{> local_digitalta/tags/view/resource-list}}
                    </div>
                    <!-- Users -->
                    <div class="digitalta-themetag-view-users">
                        {{> local_digitalta/tags/view/user-list}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
