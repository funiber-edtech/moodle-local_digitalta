    document.getElementById("tag_search_text").addEventListener("kewdown", function(e) {
        if(event.keyCode == 13) {
            event.preventDefault();
            return false;
        }
    });

    document.getElementById("tag_search_text").addEventListener("change", function(e) {
        searchTags(e.target.value);
    });

    function searchTags(name) {
        const tags = document.querySelectorAll('.theme');
        

        tags.forEach(tag => {
            var p = tag.querySelector('p');
            if (p.textContent.toLowerCase().includes(name.toLowerCase())) {
                tag.style.display = 'block';
            } else {
                tag.style.display = 'none';
            }
        });
    }

    searchTags();
</script>