  <h2 class="text-primary">
    {{#str}} teacheracademy_featured_exps_title, local_dta {{/str}}
  </h2>
  <div id="carouselFeaturedExpeciences" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselFeaturedExpeciences" data-slide-to="0" class="active"></li>
      <li data-target="#carouselFeaturedExpeciences" data-slide-to="1"></li>
      <li data-target="#carouselFeaturedExpeciences" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      {{#experiences.featured}}
        {{> local_dta/teacheracademy/featured-carousel-item}}
      {{/experiences.featured}}
    </div>
    <button class="carousel-control-prev" type="button" data-target="#carouselFeaturedExpeciences" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselFeaturedExpeciences" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>
