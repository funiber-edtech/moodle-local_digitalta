  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
  <h2 class="text-primary">
    {{#str}} teacheracademy_featured_exps_title, local_dta {{/str}}
  </h2>
  <div class="carouselExperiences">
    <div class="featured-carousel carousel-inner d-flex">
      {{#experiences.featured}}
        {{> local_dta/teacheracademy/featured-carousel-item}}
      {{/experiences.featured}}
    </div>
    
  </div>

{{#js}}
require(["local_dta/slick-carousel"], function (slickCarousel) {
  $(document).ready(function () {
    var options = {
      arrows: true,
      prevArrow:
        '<div class="slick-prev"><button type="button" class="btn"><i class="fa fa-angle-left" aria-hidden="true"></i></button></div>',
      nextArrow:
        '<div class="slick-next"><button type="button" class="btn"><i class="fa fa-angle-right" aria-hidden="true"></i></button></div>',
      centerMode: true,
      centerPadding: "60px",
      slidesToShow: 3,
      dots: false,
      autoplay: true,
      autoplaySpeed: 6000,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            arrows: false,
            centerMode: true,
            centerPadding: "40px",
            slidesToShow: 3,
          },
        },
        {
          breakpoint: 480,
          settings: {
            arrows: false,
            centerMode: true,
            centerPadding: "40px",
            slidesToShow: 1,
          },
        },
      ],
    };
    slickCarousel.init(".featured-carousel", options);
  });
});

{{/js}}