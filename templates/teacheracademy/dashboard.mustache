<div class="container-fluid col-10 dta-teacheracademy">
    <!--Section: Title-->
    <section data-section-name="dta-teacheracademy-title">
        <div class="container-fluid d-flex">
            <div class="row d-flex align-items-justify">
                <div class="col-12">
                    <div class="dta-subtitle">DigitalTA</div>
                    <h1 class="dta-title display-3">{{#str}} teacheracademy_title, local_dta {{/str}}</h1>
                </div>
            </div>
        </div>
    </section>
    <!--Section: Introduction-->
    <section data-section-name="dta-teacheracademy-introduction">
        <div class="container-fluid d-flex text-center">
            <div class="row d-flex align-items-center">
                <div class="col-md-8 col-12 pt-4 text-justify" style="line-height: 2em;">
                    {{#str}} teacheracademy_description, local_dta {{/str}}
                </div>
                <div class="col-md-4 col-12">
                    <video width="100%" autoplay loop muted>
                        <source src="https://digitalta.eu/wp-content/themes/digital-ta/img/video_web_digitalTA.mp4" type="video/mp4"/>
                        {{#str}} teacheracademy_video_not_supported, local_dta {{/str}}
                    </video>
                </div>
            </div>
        </div>
    </section>
    <!--Section: Experience miniform-->
    <section data-section-name="dta-teacheracademy-post-input">
        <div class="row my-4 justify-content-center">
            <div class="col-8">
                {{> local_dta/experiences/dashboard/post-input}}
            </div>
        </div>
    </section>
    <!--Section: Themes-->
    <section data-section-name="dta-teacheracademy-themes">
        <div class="container-fluid d-flex">
                {{> local_dta/teacheracademy/theme-list}}
        </div>
    </section>
    <!--Section: Experiences & Study Cases-->
    <section data-section-name="dta-teacheracademy-experiences-cases">
        <div class="container-fluid d-flex">
            <div class="row">
                <!-- Experiences -->
                <div class="col-md-8 col-sm-12">
                    {{> local_dta/teacheracademy/experience-list }}
                </div>
                <!-- Study Cases -->
                <div class="col-md-4 col-sm-12">
                    {{> local_dta/teacheracademy/studycase-list }}
                </div>
            </div>
        </div>
    </section>
</div>
