{{#mentors}}
<div class="list-tutoring-group-item d-flex justify-content-between align-items-center mb-2">
  <div class="d-flex align-items-center">
    <div class="position-relative">
      <img src="{{profileimage}}" class="tutoring_profile_image rounded-circle" />
    </div>
    <div class="ml-3">
      <h6 class="mb-0">{{name}}</h6>
      <small>{{#str}}tutoring:at_university, local_dta{{/str}} {{university}}</small>
    </div>
  </div>
  <div>
  {{^isEnrolled}}
    <button class="btn btn-outline-primary mb-1 send-mentor-request" data-mentorid="{{id}}" data-toggle="tooltip" data-placement="top" title="Send request">
      <i class="fa fa-user-plus"></i>
    </button>
   {{/isEnrolled}}
  
  {{#isEnrolled}}
    <button data-action="cancel-mentor-request" data-id="{{id}}" class="btn btn-outline-danger mb-1" data-toggle="tooltip" data-placement="top" title="Cancel sent request">
      <i class="fa fa-user-times"></i>
    </button>
  {{/isEnrolled}}
  </div>
</div>
{{/mentors}}