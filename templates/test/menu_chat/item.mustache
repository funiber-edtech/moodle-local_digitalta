<div class="list-tutoring-group-item d-flex justify-content-between align-items-center mb-2">
  <div class="">
    <h6 class="mb-3 mb-sm-0 font-weight-600">
      <a class="text-reset text-decoration-none" href="{{wwwroot}}/local/digitalta/pages/experiences/view.php?id={{experienceid}}">
      {{name}}
      </a> 
      {{#unread_messages}}<span class="badge badge-pill badge-danger">{{.}}</span>{{/unread_messages}}
    </h6>
  </div>
  <div class="tutoring-chat-button d-flex align-items-center">
    <div>
      {{#users}}<span class="badge badge-pill badge-light mr-1 font-weight-600"><a class="text-reset text-decoration-none" href="{{wwwroot}}/local/digitalta/pages/profile/index.php?id={{userid}}">{{firstname}} {{lastname}}</a></span>{{/users}}
    </div>
    <button class="btn btn-primary btn-sm mr-1 ml-3 open-chat m" data-id={{id}}>
      <i class="fa fa-comment mr-1"></i>
      Open
    </button>
  </div>
</div>