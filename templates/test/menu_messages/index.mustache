<div class="container mt-5">
  <div class="d-flex flex-row">
    <div
      data-tooltip-content="{{#str}}tutoring_view_tooltip, local_dta{{/str}}"
      class="data-tooltip"
    >
      <i class="fa fa-question"></i>
    </div>
    <h2>{{#str}}tutoring_title, local_dta{{/str}}</h2>
  </div>
  <div>
    <div class="">
      <div class="input-group mb-1">
        <input
          type="text"
          class="search-field__input"
          placeholder="Search user to ask tutoring..."
          aria-label="Search user"
        />
      </div>
      <a href="#" class="d-flex justify-content-end mb-1">{{#str}}tutoring_see_all_mentors, local_dta{{/str}}</a>
      <button class="btn btn-light">
        <i class="fa fa-arrow-left"></i>
      </button>
      <div class="d-flex align-items-center mb-2">
        <h5 class="mb-1">{{#str}}tutoring_request, local_dta{{/str}}</h5>
        <span class="badge badge-danger ml-2">2</span>
      </div>
      <div class="list-group">
      {{#user_list}}
       {{> local_dta/test/menu_messages/item}}
      {{/user_list}}
    </div>
  </div>
</div>