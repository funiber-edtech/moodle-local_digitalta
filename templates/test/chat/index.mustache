<div class="card">
  <div class="card-header">
    <div class="d-flex flex-row align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <div
          class="data-tooltip"
          data-tooltip-content="{{#str}}tutoring:view_tooltip, local_dta{{/str}}"
        >
          <i class="fa fa-question"></i>
        </div>
        <h2>{{#str}}tutoring:title, local_dta{{/str}}</h2>
      </div>
      <span class="badge badge-pill badge-danger">2 Tutoring Requests</span>
    </div>
  </div>
  <div class="card-body">
    <div class="d-flex align-items-center">
      <button class="btn btn-light">
        <i class="fa fa-arrow-left"></i>
      </button>
    </div>
    <div class="group-users">
      <h2>{{group_chat_name}}</h2>

      <div class="d-flex">
        {{#user_list}} {{> local_dta/test/chat/users}} {{/user_list}}
      </div>
    </div>

    <div class="chat-container rounded border border-primary p-3 mt-2">
      <div class="messages">
        <div class="tutor-message-container d-flex">
          <img
            class="chat-tutor-img rounded-circle align-self-end mr-1"
            src="https://www.w3schools.com/howto/img_avatar.png"
            alt="tutor"
          />
          <div
            class="tutor-message-box bg-secondary rounded-right rounded-top p-3"
          >
            <p>Lorem ipsum 1 vugvugkjk kugvukgvkugv ukvkvkgv ukvkvq</p>
            <div>
              <p class="time text-right m-0">18:00</p>
            </div>
          </div>
        </div>
        <div class="user-message-container d-flex justify-content-end">
          <div
            class="user-message-box bg-primary rounded-left rounded-top p-3"
          >
            <p class="text-left">Lorem ipsum 2</p>
            <p class="time m-0 text-right">18:00</p>
          </div>
        </div>
      </div>
    </div>
    <div class="message-input-container d-flex align-items-center mt-2">
      <div class="chat-reply-box mb-3">
        <div class="input-group">
          <input
            type="text"
            class="form-control custom-input"
            placeholder="Write your message..."
            aria-label="Recipient's username"
            aria-describedby="button-addon2"
          />
          <div class="input-group-append">
            <button class="btn icon-button" type="button">
              <i class="fa fa-paperclip"></i>
            </button>
            <button class="btn icon-button" type="button">
              <i class="fa fa-camera"></i>
            </button>
            <button class="btn btn-primary" type="button" id="button-addon2">
              Send <i class="fa fa-paper-plane"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
