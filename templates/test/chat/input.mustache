<div class="message-input-container d-flex align-items-center mt-2">
  <div class="chat-reply-box mb-3">
    <div class="input-group">
      <input id="chat-reply-input" type="text" class="form-control custom-input" placeholder="Write your message..."
        aria-label="Recipient's username" aria-describedby="button-addon2" autocomplete="off"   />
      <div class="input-group-append">
        <button class="btn icon-button" type="button">
          <i class="fa fa-paperclip"></i>
        </button>
        <button class="btn icon-button" type="button">
          <i class="fa fa-camera"></i>
        </button>
        <button class="btn btn-primary" type="button" id="reply-message">
          Send <i class="fa fa-paper-plane"></i>
        </button>
      </div>
    </div>
  </div>
</div>