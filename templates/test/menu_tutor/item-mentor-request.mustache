<div class="list-tutoring-group-item d-flex justify-content-between align-items-center mb-2">
  <div class="d-flex align-items-center">
    <div class="position-relative">
      <img src="{{profileimage}}" class="tutoring_profile_image rounded-circle" />
    </div>
    <div class="ml-3">
      <h6 class="mb-0">{{name}}</h6>
      {{#university}}
      <small>{{#str}}tutoring:at_university, local_digitalta{{/str}} {{university}}</small>
      {{/university}}
    </div>
  </div>
  <div>
    <button class="btn btn-outline-primary mb-1 accept-tutor-request" data-requestid="{{requestid}}"
      title="{{#str}}tutoring:accept_mentor_request, local_digitalta{{/str}}">
      <i class="fa fa-user-plus"></i>
    </button>

    <button class="btn btn-outline-danger mb-1 reject-tutor-request" data-requestid="{{requestid}}"
      title="{{#str}}tutoring:reject_mentor_request, local_digitalta{{/str}}">
      <i class="fa fa-user-times"></i>
    </button>
  </div>
</div>