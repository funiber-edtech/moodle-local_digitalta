<div class="experience-card">
  <div class="exp-card-head">
    {{> local_dta/experiences/experience-metadata}}
  </div>
  <div class="exp-card-body col-12 p-0 m-0">
    <div class="exp-img-container border-bottom  col-12 col-md-2">
      <a href="{{experiences.viewurl}}{{id}}">
      {{#pictureurl}}
        <img
          src="{{pictureurl}}"
          alt="{{#str}} myexperience_picture_alt, local_dta {{/str}}"
          class="img-fluid experience-card-img p-0"
          style="object-fit: cover; max-height: 200px, width: 100%;"
        />
      {{/pictureurl}}
      {{^pictureurl}}
        <img
          src="{{themepixurl}}screenshot.png"
          alt="{{#str}} myexperience_picture_alt, local_dta {{/str}}"
          class="img-fluid experience-card-img p-0"
          style="object-fit: cover; max-height: 200px, width: 100%;"
        />
      {{/pictureurl}}
      </a>
    </div>
    
    <div class="experience-card-body col-12 col-md-10">
      <h4 class="mb-1 experience-card-title">
      <a href="{{experiences.viewurl}}{{id}}" class="experience-card-title text-secondary">{{title}}</a>
      </h4>
      
      <a href="{{experiences.viewurl}}{{id}}">
      <div class="experience-description mb-3 text-dark">{{{description}}}</div>
      </a>
    </div>
  </div>
  <div class="exp-card-action-btns">
    {{#reactions}}
      {{> local_dta/experiences/reactions-buttons}}
    {{/reactions}}
    <div class="experience-tags d-flex px-1 align-items-center">
      <ul class="tags-list">
        {{#tags}}
          {{> local_dta/experiences/experience-tags}}
        {{/tags}}
      </ul>
    </div>
  </div>
</div>
