<div class="modal-body import-cases-modal">
    <div class="multiselect">
        {{^cases}}
            <div class="d-flex flex-column">
                <div class="input-search-container w-100 rounded-1">
                    <input type="text" class="search-input w-100" placeholder="{{#str}} experience_reflection_import_cases_searchbar_placeholder, local_dta {{/str}}">
                </div>
                <div class="options d-flex flex-column rounded-1 my-2">
                        <div class="option">
                            <a href="#" class="text-decoration-none">
                                <input type="checkbox" class="" id="case-{{id}}" value="{{id}}">
                                <label for="case-{{id}}">{{name}}</label>
                            </a>
                        </div>
                </div>
            </div>
        {{/cases}}
        {{#cases}}
            <div class="alert alert-warning" role="alert">{{#str}} experience_reflection_import_cases_nocases, local_dta {{/str}}</div>
        {{/cases}}
    </div>
    <div class="d-flex flex-row">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}} cancel, local_dta {{/str}}</button>
        <button type="button" class="btn btn-primary mx-2 px-5" id="import-case-button">{{#str}} experience_reflection_import_cases_button, local_dta {{/str}}</button>
    <div>
</div>

<style>
.import-cases-modal {
    label {
        width: 100%;
    }

    input:checked + label {
        background-color: #007bff;
        color: white;
    }
}

</style>