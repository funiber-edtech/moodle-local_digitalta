<div class="card experience-card-module">
  <div class="card-header  d-flex justify-content-between align-items-center">
    <div class="d-flex flex-row">
      <div data-tooltip-content="{{#str}}experience_view_tooltip_reflectionmanager, local_dta{{/str}}" class="data-tooltip"><i class="fa fa-question"></i></div>
      <h2>{{#str}}experience_view_reflectionmanager_title, local_dta{{/str}}</h2>
    </div>
    <a href="{{createreflectionurl}}{{experience.data.id}}"  class="shadow-none text-decoration-none">
      {{#reflection}}
        <i class="fa fa-pencil fa-lg text-info"></i>
      {{/reflection}}
      {{^reflection}}
        <i class="fa fa-plus-circle fa-lg text-info"></i>
      {{/reflection}}
    </a>
  </div>
  <div class="card-body overflow-auto">
      {{# reflectionsections }}
        {{#content}}
          <h6>{{header}}</h6>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              {{{ content }}}
            </li>
          </ul>
        {{/content}}  
    {{/ reflectionsections }}
    {{#reflection}}
        <a href="{{viewreflectionurl}}{{experience.data.id}}" class="shadow-none text-decoration-none">
          <p class="text-primary">{{#str}}see_more, local_dta{{/str}}</p>
        </a>
      {{/reflection}}
  </div>
</div>
