<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        {{#user}}
            <div class="user-info d-flex align-items-center">
                <a href="{{profileurl}}" class="perfil-link d-flex align-items-center text-muted text-decoration-none">
                    <img src="{{imageurl}}" class="rounded-circle mr-2" alt="{{#str}}avatar_alt, local_dta{{/str}}" style="width: 50px; height: 50px;">
                    <div class="text-dark">
                        <strong>{{name}}</strong><br>
                        <small>{{email}}</small>
                    </div>
                </a>
            </div>
        {{/user}}
        {{#experience}} 
        <div class="d-flex">
        {{! TODO agregar boton de borrado dentro del form }}
            {{^experience.data.status}} 
            <a href="#" class="mr-3 shadow-none" id="edit-experience-button" title="{{#str}}edit, local_dta{{/str}}">
                <i class="fa fa-pencil fa-lg text-primary"></i>
            </a>
            <a href="{{deleteurl}}{{data.id}}" class="mr-3 shadow-none" title="{{#str}}delete, local_dta{{/str}}">
                <i class="fa fa-trash fa-lg text-danger"></i>
            </a>
            <a href="#" class="mr-3 shadow-none" id="block-experience-button" title="{{#str}}finish, local_dta{{/str}}">
                <i class="fa fa-lock fa-lg"></i>
            </a>
            {{/experience.data.status}} 
            {{#experience.data.status}} 
            <a href="#" class="mr-3 shadow-none" id="open-experience-button" data-id="{{experience.data.id}}">
                <i class="fa fa-unlock-alt fa-lg text-secondary"></i>
            </a>
            {{/experience.data.status}} 
        </div>
        {{/experience}}
    </div>
    {{#experience}}
        {{#pictureurl}}
            <img src="{{.}}" class="img-fluid card-img-top border-bottom" alt="{{#str}}experience_picture_alt, local_dta{{/str}}"> 
        {{/pictureurl}}

        {{#data}}
            <div class="card-body">
                <h4 class="card-title text-primary">{{title}}</h4>
                

                <div class="d-flex align-items-start">
                    <span class="text-muted">
                        <i class="fa fa-calendar me-1"></i>
                        {{timecreated}}
                    </span>
                </div>

                <div class="card-text">
                    {{{description}}}
                    {{{context}}}
                </div>
                <div class="card-action-btns">
                    {{#reactions}}
                        {{> local_dta/reactions/reactions-buttons}}
                    {{/reactions}}
                    {{> local_dta/tags/tags-list}}
                </div>
            </div>
            {{> local_dta/reactions/comments-list}}
        {{/data}}
    {{/experience}}
</div>