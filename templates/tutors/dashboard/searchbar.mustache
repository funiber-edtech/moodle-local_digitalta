<div class="d-flex justify-content-between align-items-center mr-2">
  <form class="form-inline position-relative">
    <div class="input-group">
      <input
        class="form-control border-secondary searchbar-input"
        type="search"
        placeholder="{{#str}}tutor_searchbar_placeholder, local_digitalta{{/str}}"
        aria-label="Search"
      />
      <div class="input-group-append">
        <button
          class="digitalta-searchbar-icon-button"
          type="button"
          id="filterButton"
        >
          <i class="fa fa-filter"></i>
        </button>
        <span id="filterTag" class="badge badge-secondary d-none"></span>
      </div>
    </div>
  </form>
  <div id="filter-options" class="dropdown-menu d-none">
    <div class="container">
        <div class="d-flex flex-row justify-content-between filter">
          <label for="themeSelect" class="col-form-label">{{#str}}filter_themes_label, local_digitalta{{/str}}</label>
          <select class="form-control" id="themeSelect">
            <option disabled selected value="">{{#str}}filter_themes_placeholder, local_digitalta{{/str}}</option>
          </select>
        </div>
        <div class="d-flex flex-row justify-content-between filter">
          <label for="tagsSelect" class="col-form-label">{{#str}}filter_tags_label, local_digitalta{{/str}}</label>
          <select class="form-control" id="tagsSelect">
            <option disabled selected value="">{{#str}}filter_tags_placeholder, local_digitalta{{/str}}</option>
          </select>
        </div>
        <div class="d-flex flex-row justify-content-between filter">
          <label for="languageSelect" class="col-form-label">{{#str}}filter_language_label, local_digitalta{{/str}}</label>
          <select class="form-control" id="languageSelect">
            <option disabled selected value="">{{#str}}filter_language_placeholder, local_digitalta{{/str}}</option>
          </select>
        </div>
      </div>
    </div>
  </div>
  {{> local_digitalta/_common/filter-chip }}

  <script>
    document
      .getElementById("filterButton")
      .addEventListener("click", function () {
        let filterOptions = document.getElementById("filter-options");
        if (filterOptions.classList.contains("d-none")) {
          filterOptions.classList.remove("d-none");
          filterOptions.classList.add("d-block");
        } else {
          filterOptions.classList.remove("d-block");
          filterOptions.classList.add("d-none");
        }
      });

    function applyFilter(type) {
      var filterTag = document.getElementById("filterTag");
      filterTag.textContent = type;
      filterTag.classList.remove("d-none");
    }
  </script>
</div>

