<div class="container-fluid col-12 col-sm-10 digitalta-tutors">
    <!--Section: Title-->
    <section data-section-name="digitalta-tutors-title" class="mb-4">
        <div class="container-fluid d-flex">
            <div class="row align-items-justify">
                <div class="col-12">
                    <div class="digitalta-subtitle">DigitalTA</div>
                    <h1 class="digitalta-title display-3">{{{title}}}</h1>
                </div>
            </div>
        </div>
    </section>
    <!--Section: Introduction-->
    <section data-section-name="digitalta-tutors-introduction" class="mb-4">
        <div class="container-fluid d-flex text-center">
            <div class="row align-items-center">
                <div class="col-12 text-justify" style="line-height: 2em;">
                    {{#istutor}}
                        {{#str}} tutors:description_tutor, local_digitalta {{/str}}
                    {{/istutor}}
                    {{^istutor}}
                        {{#str}} tutors:description, local_digitalta {{/str}}
                    {{/istutor}}
                </div>
            </div>
        </div>
    </section>
    <!--Section: Tutors-->
    <section data-section-name="digitalta-tutors-list" class="mb-4">
        <div class="container-fluid d-flex">
            {{> local_digitalta/tutors/dashboard/tutor-list}}
        </div>
    </section>
    {{#mentoring_requests.0}}
    <section>
        <div class="flex d-flex mb-4 align-items-center" style="gap: .5em;">
            <h2 class="text-secondary my-0 digitalta-title">{{#str}} tutoring:experience_mentoring_request_title,
                local_digitalta {{/str}}</h2>
        </div>
        {{#mentoring_requests}}
        {{> local_digitalta/tutors/dashboard/mentor-experience-request}}
        {{/mentoring_requests}}
    </section>
    {{/mentoring_requests.0}}
</div>