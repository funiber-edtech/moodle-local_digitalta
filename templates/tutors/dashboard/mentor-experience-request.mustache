<div class="list-tutoring-group-item d-flex justify-content-between align-items-center mb-2">
  <div class="d-flex align-items-center">
    <div class="ml-3">
      <h6 class="mb-0">{{experience.title}}</h6>
    </div>
  </div>
  <div>
    <button class="btn btn-outline-primary mb-1 send-tutor-request" data-requestid="{{id}}"
      title="{{#str}}tutoring:accept_mentor_request, local_digitalta{{/str}}" id="accept-tutor-request">
      <i class="fa fa-user-plus"></i>
    </button>

    <button class="btn btn-outline-danger mb-1 remove-tutor-request" data-requestid="{{id}}"
      title="{{#str}}tutoring:reject_mentor_request, local_digitalta{{/str}}" id="reject-tutor-request">
      <i class="fa fa-user-times"></i>
    </button>
  </div>
</div>