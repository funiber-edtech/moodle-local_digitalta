<div class="container mt-3">
    <div class="card mb-4">
        <!-- User Info en el encabezado del Pin -->
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="user-info d-flex align-items-center">
                <a href="{{userprofile_url}}" class="perfil-link d-flex align-items-center text-muted text-decoration-none">
                    <img src="{{user.picture_url}}" class="rounded-circle mr-2" alt="User Image" style="width: 50px; height: 50px;">
                    <div>
                        <strong>{{user.name}}</strong><br>
                        <small>{{user.email}}</small>
                    </div>
                </a>
            </div>
            <div class="dropdown">
                <!-- Ajuste para el menú similar a Instagram -->
                <a href="#" class="shadow-none" role="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-ellipsis-v fa-lg text-muted"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="{{edit_url}}{{experience.id}}">Editar</a>
                    <a class="dropdown-item text-danger" href="{{delete_url}}{{experience.id}}">Eliminar</a>
                    {{#is_admin}}
                    <a class="dropdown-item" href="#createCase">Crear caso</a>
                    {{/is_admin}}
                </div>
            </div>
        </div>

        <!-- Imagen del Pin solo si existe -->
        {{#experience.picture_url}}
        <img src="{{experience.picture_url}}" class="card-img-top" alt="Experience Image">
        {{/experience.picture_url}}

        <div class="card-body">
            <!-- Contenido y botones de interacción -->
            <h5 class="card-title">{{experience.title}}</h5>
            <p class="card-text">{{experience.description}}</p>
            <div class="mb-2 d-flex align-items-center">
                <button class="btn btn-light btn-sm mr-2" onclick="addLike();"><i class="fa fa-thumbs-up"></i> <span id="likeCount">256</span></button>
                <button class="btn btn-light btn-sm mr-2" onclick="addDislike();"><i class="fa fa-thumbs-down"></i></button>
                <button class="btn btn-light btn-sm" data-toggle="collapse" data-target="#commentsCollapse" aria-expanded="false" aria-controls="commentsCollapse"><i class="fa fa-comment"></i></button>
            </div>
        </div>

        <!-- Sección de comentarios -->
        <div class="collapse" id="commentsCollapse">
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Añade un comentario..." aria-label="Añade un comentario..." id="commentText">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" onclick="sendComment();"><i class="fa fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>
            <ul class="list-group list-group-flush" id="commentsList"></ul>
        </div>
    </div>
</div>
