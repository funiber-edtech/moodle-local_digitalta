{{< core/modal }}
    {{$title}}
        {{#str}} modal:title, tiny_dta {{/str}}
    {{/title}}

    {{$body}}
        <form id="res-import-form">
            <div class="form-group">
                <label for="nameInput">{{#str}} label:name, tiny_dta {{/str}}</label>
                <input type="text" class="form-control" name="nameInput" placeholder="{{#str}} placeholder:name, tiny_dta {{/str}}..." required />
            </div>
            <div class="form-group">
                <label for="urlInput">{{#str}} label:url, tiny_dta {{/str}}</label>
                <input type="url" class="form-control" name="urlInput" placeholder="{{#str}} placeholder:url, tiny_dta {{/str}}..." pattern="https://.*" required />
                <input type="hidden" name="formatInput" value="{{format_input_id}}" />
            </div>
            <div class="form-group">
                <div class="label-extra d-flex flex-row">
                    <label for="descriptionInput">{{#str}} label:description, tiny_dta {{/str}}</label>
                    <p>{{#str}} label:description:max_char, tiny_dta {{/str}}</p>
                </div>
                <textarea class="form-control" name="descriptionInput" placeholder="{{#str}} placeholder:description, tiny_dta {{/str}}..." maxlength="300" rows="3"></textarea> 
            </div>
            <div class="d-flex flex-row justify-content-between">
                <div class="mr-5">
                    <div class="form-group">
                        <label for="themeSelect">{{#str}} label:themes, tiny_dta {{/str}}</label>
                        <select multiple class="form-control" name="themeSelect" required>
                            {{#themes}}
                                <option value="{{value}}">{{text}}</option>
                            {{/themes}}
                        </select>
                    </div>
                    <div class="tags-input d-flex flex-column justify-content-start">
                        <div class="form-group w-100">
                            <label for="tagSelect">{{#str}} label:tags, tiny_dta {{/str}}</label>
                            <select multiple class="form-control" name="tagSelect" required>
                                {{#tags}}
                                    <option value="{{value}}">{{text}}</option>
                                {{/tags}}
                            </select>
                        </div>
                        <div class="tags-container d-flex flex-row flex-wrap w-100">
                            <div class="tag-normal">Tag 1</div>
                            <div class="tag-normal">Tag 2</div>
                            <div class="tag-normal">Tag 3</div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label for="typeSelect">{{#str}} label:file_type, tiny_dta {{/str}}</label>
                        <select class="form-control" name="typeSelect" required>
                            {{#types}}
                                <option value="{{value}}">{{text}}</option>
                            {{/types}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="languageSelect">{{#str}} label:language, tiny_dta {{/str}}</label>
                        <select class="form-control" name="languageSelect" required>
                            {{#languages}}
                                <option value="{{value}}">{{text}}</option>
                            {{/languages}}
                        </select>
                    </div>
                </div>
            </div>
        </form>
    {{/body}}
    {{$footer}}
        {{#change}}
            <div class="d-flex flex-row justify-content-between w-100">
                <button class="btn btn-link" id="changeToImportResource">Search for an existing resource</a>
                <button type="submit" data-action="save" class="btn btn-primary">{{#str}} button:import, tiny_dta {{/str}}</button>
            </div>
        {{/change}}
        {{^change}}
            <button type="submit" data-action="save" class="btn btn-primary">{{#str}} button:import, tiny_dta {{/str}}</button>
        {{/change}}
    {{/footer}}
{{/ core/modal }}