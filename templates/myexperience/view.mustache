<div class="container-fluid mt-3">
    <div class="card mb-4">
       
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="user-info d-flex align-items-center">
                <a href="{{userprofile_url}}" class="perfil-link d-flex align-items-center text-muted text-decoration-none">
                    <img src="{{user.imageurl}}" class="rounded-circle mr-2" alt="{{#str}}avatar_alt, local_dta{{/str}}" style="width: 50px; height: 50px;">
                    <div>
                        <strong>{{user.name}}</strong><br>
                        <small>{{user.email}}</small>
                    </div>
                </a>
            </div>
            {{#experience}}
            <div class="dropdown">

                <a href="#" class="shadow-none" role="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-ellipsis-v fa-lg text-muted"></i>
                </a>
                
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="{{experience.editurl}}{{experience.id}}">{{#str}} edit, local_dta {{/str}}</a>
                    <a class="dropdown-item" href="{{experience.deleteurl}}{{experience.id}}">{{#str}} delete, local_dta {{/str}}</a>
                    {{#isadmin}}
                    <a class="dropdown-item" href="{{createcaseurl}}{{experience.id}}">{{#str}} create_case, local_dta {{/str}}</a>
                    {{/isadmin}}
                </div>
            </div>
            {{/experience}}
        </div>

        {{#experience.pictureurl}}
        <img src="{{.}}" class="card-img-top" alt="{{#str}}myexperience_picture_alt, local_dta{{/str}}">
        {{/experience.pictureurl}}

        <div class="card-body">
            <h5 class="card-title">{{experience.title}}</h5>
            <p class="card-text">{{experience.description}}</p>
            <div class="d-flex justify-content-start">
                <button class="btn btn-outline-primary btn-sm mr-2" onclick="addLike();"><i class="fa fa-thumbs-up"></i> <span id="likeCount">256</span></button>
                <button class="btn btn-outline-danger btn-sm mr-2" onclick="addDislike();"><i class="fa fa-thumbs-down"></i></button>
                <button class="btn btn-outline-secondary btn-sm" data-toggle="collapse" data-target="#commentsCollapse" aria-expanded="false" aria-controls="commentsCollapse"><i class="fa fa-comment"></i></button>
            </div>
        </div>

        <div class="collapse" id="commentsCollapse">
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="{{#str}}myexperience_add_comment, local_dta{{/str}}" aria-label="{{#str}}myexperience_add_comment, local_dta{{/str}}" id="commentText">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" onclick="sendComment();"><i class="fa fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>
            <ul class="list-group list-group-flush" id="commentsList"></ul>
        </div>
    </div>
</div>
