<div class="card experience-card-module">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Our Cases</h2>
        {{#experience}} 
        <div class="d-flex">
            {{#isadmin}}
            <a href="{{createcaseurl}}{{data.id}}" class="shadow-none" title="{{#str}}create_case, local_dta{{/str}}">
                <i class="fa fa-plus-circle fa-lg text-info"></i>
            </a>
            {{/isadmin}}
        </div>
        {{/experience}}
    </div>
    <div class="card-body">
        {{#experience}}
            {{#cases}}
            <div class="container-fluid mb-5">
                    <h4 class="card-title">{{title}}</h4>
                    <div>{{{description}}}</div>
                    <div class="d-flex">
                        <a href="{{viewcaseurl}}{{id}}" class="mr-3 shadow-none" title="{{#str}}view, local_dta{{/str}}">
                            <i class="fa fa-eye fa-lg text-muted"></i>
                        </a>
                        <a href="{{editcaseurl}}{{id}}" class="mr-3 shadow-none" title="{{#str}}edit, local_dta{{/str}}">
                            <i class="fa fa-pencil fa-lg text-muted"></i>
                        </a>
                        <a href="{{deletecaseurl}}{{id}}" class="mr-3 shadow-none" title="{{#str}}delete, local_dta{{/str}}">
                            <i class="fa fa-trash fa-lg text-muted"></i>
                        </a>
                    </div>
            <hr/>
            </div>
            {{/cases}}
            {{^cases}}
                <h4 class="card-title text-muted">There are not cases available</h4>
            {{/cases}}
        {{/experience}}
    </div>
</div>
